@model IEnumerable<aspp.Entities.Student>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>


    <style>
        ul {
            text-align: center;
            margin-top: 2em;
        }

            ul > li {
                margin-top: 1em;
            }
    </style>
</head>
<body>
    @foreach (var item in Model)
    {
        <ul>
            <li>Id : @item.Id</li>
            <li>Name : @item.Name</li>
            <li>Surname : @item.Surname</li>
            <li>Age : @item.Age</li>
            <li>Address : @item.Address</li>
            <li>Salary : @item.Salary</li>
        </ul>
    }

<form asp-controller="ShowStudents">
   

    <button style=" background-color:bisque;" asp-action="GoBack" type="submit" id="submit" class="submit">Back</button>
</form>
</body>
</html>
